{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "target": "es2018",
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "removeComments": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
